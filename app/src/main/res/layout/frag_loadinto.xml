<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_alignParentTop="true"
        android:fontFamily="@font/lato"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:text="Loan"
        android:layout_height="wrap_content"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_above="@+id/btnlayout"
        android:layout_width="match_parent"
        app:cardCornerRadius="16dp"
        android:layout_below="@+id/heading"
        android:id="@+id/cadlayout"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/lato"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="Maximum Loan Amount Upto"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:fontFamily="@font/lato"
                android:textSize="28dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="200000"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/btnlayout"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                         android:padding="15dp"
                        android:layout_width="70dp"
                        android:background="@drawable/circleblue"
                        android:layout_gravity="center"

                         android:layout_height="70dp"
                        android:src="@drawable/idcard"
                       />
                    <TextView
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textColor="@color/text_secondary_dark"
                        android:layout_width="match_parent"
                        android:text="Submit Info"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>
        <ImageView
            android:layout_weight=".5"
            android:layout_width="0dp"
           android:src="@drawable/arrow"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="15dp"
                android:layout_width="70dp"
                android:background="@drawable/circleorange"
                android:layout_gravity="center"
                android:layout_height="70dp"
                android:src="@drawable/card"
                />
            <TextView
                android:padding="10dp"
                android:fontFamily="@font/lato"
                android:textSize="13dp"
                android:textColor="@color/text_secondary_dark"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="Get Credit"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>
        <ImageView
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:src="@drawable/arrow"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="15dp"
                android:layout_width="70dp"
                android:background="@drawable/circlegreen"
                android:layout_gravity="center"
                android:layout_height="70dp"
                android:src="@drawable/money"
                />
            <TextView
                android:padding="10dp"
                android:fontFamily="@font/lato"
                android:textSize="13dp"
                android:textColor="@color/text_secondary_dark"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text="Get Money"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
       android:id="@+id/applybtn"
        android:layout_width="match_parent" android:text="Apply" app:cornerRadius="16sp" android:layout_margin="15dp" android:layout_alignParentBottom="true"         android:layout_height="wrap_content"></com.google.android.material.button.MaterialButton>


</RelativeLayout>