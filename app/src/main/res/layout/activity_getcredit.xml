<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
       android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:id="@+id/iv_heading"
        android:src="@drawable/loancad"
        android:layout_height="wrap_content"></ImageView>

    <TextView

        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/heading"
        android:fontFamily="@font/lato"
        android:text="We are assessing your Credit"
        android:layout_below="@+id/iv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView

        android:textColor="@color/text_disabled_dark"
        android:textSize="16sp"
        android:padding="10dp"
        android:gravity="center"
        android:fontFamily="@font/lato"
        android:text="This should only take a couple of minutes  we will notify you once we have assessed your credit.."
        android:layout_below="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>




</RelativeLayout>