<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
             android:layout_gravity="center"
                android:weightSum="3"
                android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        android:id="@+id/iv_bnk"
                        android:src="@drawable/b1"
                        android:layout_height="80dp">
                    </ImageView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                            <TextView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:fontFamily="@font/lato"
                                android:layout_width="match_parent"
                                android:text="Loan Amount"
                                android:textColor="@color/text_disabled_dark"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="â‚¹1000000"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:id="@+id/txt_amount"
                                android:fontFamily="@font/lato"
                                android:textColor="@color/black"
                                android:textAllCaps="true"
                                android:layout_height="wrap_content"></TextView>

                            <TextView
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:fontFamily="@font/lato"
                                android:layout_width="match_parent"
                                android:text="Tenure"
                                android:textColor="@color/text_disabled_dark"
                                android:layout_height="wrap_content"></TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:text="60 Months"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:fontFamily="@font/lato"
                               android:id="@+id/txt_tenure"
                                android:textColor="@color/black"
                                android:textAllCaps="true"
                                android:layout_height="wrap_content"></TextView>


                    </LinearLayout>


                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato"
                    app:cornerRadius="16dp"
                    android:text="Apply"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/recbutton"
                    android:id="@+id/applybtn"
                    app:backgroundTint="@color/button_background_enabled_start"
                    android:layout_height="40dp"></Button>


            </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>