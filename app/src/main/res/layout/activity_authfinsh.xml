<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:id="@+id/iv_heading"
        android:layout_marginTop="50dp"
        android:src="@drawable/cardgirl"
        android:layout_height="wrap_content"></ImageView>
    <TextView

        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/heading"
        android:fontFamily="@font/lato"
        android:text="Authentication Succeeded"
        android:layout_below="@+id/iv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_below="@+id/heading"
        android:layout_margin="20dp"
        android:text="Next"
        android:id="@+id/next"
        app:cornerRadius="15sp"
        android:layout_height="wrap_content"></com.google.android.material.button.MaterialButton>

</RelativeLayout>